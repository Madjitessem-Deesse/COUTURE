// tsconfig.json

{
  "compilerOptions": {
    
    "lib": ["es2020", "dom", "dom.iterable"], 
    "target": "es2020",
    "module": "esnext", 
    "moduleResolution": "bundler",
    
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    
    // Stricter Typechecking Options (Gardées)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Autres (Gardées)
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
  }
}